{
    "name": "obray/obray",
    "description": "Simple PHP framework for websites and applications.",
    "license": "MIT",
    "homepage": "https://www.obray.net",
    "require": {
        "php": "^7.1",
        "php-di/php-di": "^6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "classmap": [
            "core"
        ],
        "files": [
            "core/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "export XDEBUG_MODE=coverage && ./vendor/bin/phpunit --colors --coverage-html coverage"
    }
}
