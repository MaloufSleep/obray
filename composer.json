{
  "name": "obray/obray",
  "description": "Simple PHP framework for websites and applications.",
  "license": "MIT",
  "homepage": "https://www.obray.net",
  "require": {
    "php": "^7.4",
    "ext-curl": "*",
    "psr/container": "^1|^2",
    "symfony/console": "^5.3",
    "ext-pdo": "*",
    "ext-json": "*",
    "ext-openssl": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5"
  },
  "autoload": {
    "classmap": [
      "core"
    ],
    "files": [
      "core/functions.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "tests\\": "tests/",
      "App\\": "app/app/"
    }
  },
  "scripts": {
    "test": "export XDEBUG_MODE=coverage && ./vendor/bin/phpunit --colors --coverage-html coverage"
  }
}
